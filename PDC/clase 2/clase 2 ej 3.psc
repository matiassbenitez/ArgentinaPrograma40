	Escribir "ingresar los metros a convertir"
	Leer metros
	cm=metros*100
	ml=metros*1000
	pg=cm/2.54
	Escribir "eL RESULTADO ES:" cm "centrimetros"
	Escribir "eL RESULTADO ES:" ml "milimetros"
	Escribir "eL RESULTADO ES:" pg "pulgadas"

	
FinAlgoritmo
